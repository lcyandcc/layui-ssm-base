        deptno = #{deptno,jdbcType=INTEGER},
      </if>
    </set>
    where empno = #{empno,jdbcType=INTEGER}
  </update>
  <update id="updateByPrimaryKey" parameterType="cn.kgc.pojo.Emp" >
    update emp
    set ename = #{ename,jdbcType=VARCHAR},
      job = #{job,jdbcType=VARCHAR},
      mgr = #{mgr,jdbcType=INTEGER},
      hiredate = #{hiredate,jdbcType=DATE},
      sal = #{sal,jdbcType=DECIMAL},
      COMM = #{comm,jdbcType=DECIMAL},
      deptno = #{deptno,jdbcType=INTEGER}
    where empno = #{empno,jdbcType=INTEGER}
  </update>
  <resultMap id="selEmpAndDeptMap" type="Emp" extends="BaseResultMap">
    <association property="dept" javaType="Dept" column="deptno"
                 select="cn.kgc.dao.DeptMapper.selectByPrimaryKey"/>
  </resultMap>
  <select id="selAllTByPage" resultMap="selEmpAndDeptMap">
    select  <include refid="Base_Column_List"/> from emp
  </select>
  <select id="selAllTByPageParams" resultMap="selEmpAndDeptMap">
    select  <include refid="Base_Column_List"/> from emp
    <where>
      <if test="ename!=null and ename!=''">
        and ename like concat("%",#{ename},"%")
      </if>
      <if test="job!=null and job!=''">
        and job = #{job}
      </if>
      <if test="deptno!=null">
        and deptno = #{deptno}
      </if>
    </where>
    order  by empno desc
  </select>

  <!--批量删除员工-->
  <delete id="delBatchTByIds">
    delete from emp where empno in
    <foreach collection="ids" item="item" open="(" separator="," close=")">
      #{item}
    </foreach>
  </delete>
</mapper>